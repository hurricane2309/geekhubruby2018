<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @city.name %>
</p>

<p>
  <strong>Image:</strong>
<%= link_to(image_tag(@city.image.url(:thumb))) if @city.image.exists? %>
</p>

<%= link_to 'Edit', edit_city_path(@city) %> |
<%= link_to 'Back', cities_path %>
<hr>
<% @city.airports.each do |airport| %>
<p><%= airport.name %></p>
<p><%= link_to(image_tag(airport.image.url(:thumb))) if airport.image.exists? %></p>
<td><%= link_to 'Show', airport %></td>
<td><%= link_to 'Edit', edit_airport_path(airport) %></td>
<td><%= link_to 'Destroy', airport, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
<hr>
<%= render 'airports/form', airport: @city.airports.build %>
